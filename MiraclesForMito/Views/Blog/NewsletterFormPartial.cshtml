<div id="BlogNewsletterFormContainer" class="row hidden-xs hidden-sm">
	<div class="col-lg-12">
		<h5>Newsletter</h5>
		<p>Get notified when a new post is published.</p>
		<form id="NewsletterForm" action="~/API/NotifiedListItem" method="post" role="form">
			<div class="input-group">
				<input id="NewsletterEmailInput" placeholder="Enter your email" type="text" class="form-control" />
				<span class="input-group-btn">
					<button class="btn btn-miracles" type="submit">SUBSCRIBE</button>
				</span>
			</div>
		</form>
	</div>
</div>
